<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_mlarge" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8dp"
        android:textStyle="bold"
        android:text="Method 1: Small QR Code"/>


    <Button
        android:id="@+id/small_qr_scan_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_smlarge"
        android:background="@drawable/square_blue_background"
        android:text="@string/small_qr_code"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:drawableRight="@drawable/small_round_qr_code_24"
       />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8dp"
        android:textStyle="bold"
        android:text="Method 2: Big QR Code"
        android:autofillHints="smsOTPCode"
        android:importantForAutofill="yes"/>

    <Button
        android:id="@+id/big_qr_scan_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_smlarge"
        android:background="@drawable/square_blue_background"
        android:text="@string/big_qr_code"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:drawableRight="@drawable/big_round_qr_code_24"
        />
    <Button
        android:id="@+id/big_qr_ocr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_smlarge"
        android:background="@drawable/square_blue_background"
        android:text="Step 2: Take Photo of Aadhaar Number"
        android:onClick="setAadhaarId"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        />


    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_mlarge" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8dp"
        android:textStyle="bold"
        android:text="Method 3: Capture Photo"/>


    <Button
        android:id="@+id/front_aadhaar_capture_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_smlarge"
        android:background="@drawable/centre_background"
        android:text="Step 1: Take Aadhaar Card Front Side Photo"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />



    <Button
        android:id="@+id/back_aadhaar_capture_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_smlarge"
        android:background="@drawable/centre_background"
        android:text="Step 2: Take Aadhaar Card Back Side Photo"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />


</LinearLayout>